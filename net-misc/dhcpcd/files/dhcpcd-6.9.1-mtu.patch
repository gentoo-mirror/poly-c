-		set_mtu "$mtu"
-		rm "$mtu_dir/$interface"
+	elif [ -e "$mtu_dir/$interface" ]; then
+		if $if_up || $if_down; then
+			# No MTU in this state, so restore the prior MTU
+			mtu=$(cat "$mtu_dir/$interface")
+			syslog info "MTU restored to $mtu"
+			set_mtu "$mtu"
+			rm "$mtu_dir/$interface"
+		fi
 	fi
